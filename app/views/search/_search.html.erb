<div class="row">
<div class="col-xs-9 col-xs-offset-3">
<%= form_tag(search_path,:method => 'get') do %>
  <%= text_field_tag :search_word %>
  <%= select_tag 'search_target', options_for_select([["User","user"], ["Book","book"],],:selected=>"user") %>
  <%= select_tag 'search_method', options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"],],:selected=>"perfect_match") %>
  <%= submit_tag '検索', :name => nil, :title => nil %>
<% end %>
</div>
</div>